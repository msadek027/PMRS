@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Areas/Security/ngCode/frmChangePass.js"></script>

<div ng-app="myApp" ng-controller="myCtrl">


    <div class="form-horizontal" ng-form="frmChangePass">
        <div class="panel panel-default">
            <div class="panel-header bg-aero">
                <div class="form-group">
                    <div class="col-md-5">
                        <h2 class="panel-title">
                            <strong>Change Password</strong>
                        </h2>
                    </div>
                    <div class="col-md-7">
                        <div class="text-right  m-t-10">
                            <button class="btn btn-embossed btn-primary btn-rounded" ng-click="SaveData()" ng-class="{'btn-transparent': frmChangePass.$invalid||passwordValidation}" ng-hide="ViewPerm == 'NO'" ng-disabled="frmChangePass.$invalid||passwordValidation"><i class="fa fa-save"></i>&nbsp{{btnSaveValue}}</button>
                            <button type="button" class="btn btn-embossed btn-danger btn-rounded" ng-click="Reset()"><i class="fa fa-refresh"></i>&nbsp Reset</button>
                            @* <button type="button" class="btn btn-embossed btn-success btn-rounded" ng-click="GetUserLoginList()"><i class="fa fa-search"></i>&nbspSearch</button>*@
                        </div>
                    </div>
                </div>
            </div>

            <div class="panel-content bg-light-blue">
                <div class="form-group">
                    <div class="col-md-3">
                        <label class="control-label  input-sm required">User Name</label>
                    </div>
                    <div class="col-md-3">
                        <input type="text" class="form-control input-sm" id="Username" value=@Session["userName"].ToString() placeholder="Username" required readonly>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <label class="control-label input-sm required">Current Password</label>
                    </div>
                    <div class="col-md-3">
                        <input type="password" class="form-control form-white input-sm" id="CurrentPassword" ng-keyup="CheckCurrentPassword()" ng-model="CurrentPassword" placeholder="Type Current Password" autocomplete="new-password" required>
                    </div>
                    <div class="col-md-3">
                        <p class="label label-danger" ng-show="CrntPassChq">Wrong Password</p>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <label class="control-label input-sm required">New Password</label>
                    </div>
                    <div class="col-md-3">
                        <input type="password" class="form-control input-sm" id="Password" ng-keyup="CheckPasswordValidity()" ng-model="Password" ng-class="{'form-white':validateCurrentPassword}" ng-disabled="passwordDisabled" placeholder="Type Password" required>
                    </div>
                    <div class="col-md-3">
                        <input type="password" class="form-control input-sm" id="RePassword" ng-keyup="CheckPasswordValidity()" ng-model="RePassword" ng-class="{'form-white':validateCurrentPassword}" ng-disabled="passwordDisabled" placeholder="Re-type Password" required>
                    </div>
                    <div class="col-md-3">
                        <p class="label label-danger" ng-show="Password != RePassword">Not Matched</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>