@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Areas/Transaction/ngCode/frmDepartmentInfo.js"></script>

<div ng-app="myApp" ng-controller="myCtrl">
    <div class="loader ng-cloak LoaderStyle" data-loading>
        <img src="~/assets/images/square_loading.gif" width="100px;" height="100px;" style="top: 50%; left: 50%;" />
    </div>
    <div class="form-horizontal" ng-form="frmDepartmentInfo">
        <div class="panel panel-default">
            <div class="panel-header bg-aero">
                <div class="form-group">
                    <div class="col-md-5">
                        <h2 class="panel-title">
                            <strong>{{FormTitle}}</strong>
                        </h2>
                    </div>
                    <div class="col-md-7">

                        <div class="text-right  m-t-10">
                            <button class="btn btn-embossed btn-primary btn-rounded" ng-click="SaveData()" ng-class="{'btn-transparent': frmDepartmentInfo.$invalid}" ng-disabled="frmDepartmentInfo.$invalid" ng-hide="ViewPerm == 'NO'"><i class="fa fa-save"></i>&nbsp সংরক্ষণ</button>
                            <button type="button" class="btn btn-embossed btn-danger btn-rounded" ng-click="Reset()"><i class="fa fa-refresh"></i>&nbsp রিসেট</button>
                            <button type="button" class="btn btn-embossed btn-success btn-rounded" ng-hide="SearchPerm == 'NO'" ng-click="GetDepartmentInfoList()"><i class="fa fa-search"></i>&nbsp অনুসন্ধান</button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="panel-content bg-light-blue">

                <div class="form-group">
                    <div class="col-md-3">
                        <label class="control-label input-sm">
                            বিভাগের কোড
                        </label>
                    </div>
                    <div class="col-md-3">
                        <input type="text" class="form-control input-sm" id="uiCode" placeholder="Auto Generated" ng-model="uiCode" disabled="disabled">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <label class="control-label input-sm required">বিভাগ নাম</label>
                    </div>
                    <div class="col-md-4">
                        <input type="text" class="form-control form-white input-sm" id="DepartmentName" ng-maxlength="50" placeholder="Department Name" ng-model="DepartmentName" required>
                        <input type="hidden" ng-model="uiID" />
                    </div>
                </div>   
                <div class="form-group">
                    <div class="col-md-3">
                        <label class="control-label input-sm required">
                            স্ট্যাটাস
                        </label>
                    </div>
                    <div class="col-md-2">
                        <select class="form-control form-white input-sm" id="Status" ng-model="Status" required>
                            @*<option value="">Please Select</option>*@
                            <option value=1>সক্রিয়</option>
                            <option value=0>নিষ্ক্রিয়</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="DepartmentModal" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="panel-content bg-light-blue">
                    <div class="modal-header">
                        <h2 class="panel-title">
                            বিভাগের তালিকা
                        </h2>
                        <button type="button" id="modalClose" class="close" data-dismiss="modal" aria-hidden="true"><i class="icons-office-52"></i></button>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div id="gridDepartment" ui-grid="gridDepartmentOptions" class="grid" ui-grid-pagination style=" height: 350px; width: 100%;" ui-grid-auto-resize ui-grid-resize-columns></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>